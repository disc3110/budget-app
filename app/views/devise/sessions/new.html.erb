<div class="bg-white my-4">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.email_field :email, class:'form-field', autofocus: true, autocomplete: "email", placeholder: 'Email' %>

    <%= f.password_field :password, class:'form-field', autocomplete: "current-password", placeholder: 'Password' %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions d-flex flex-column align-items-center bg-main">
    <%= f.submit "Log in",
      class: 'border p-2 bg-blue text-light w-50 my-1' %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

</div>